{
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(cp:*)",
      "Bash(echo:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(open:*)",
      "Bash(pnpm:*)",
      "Bash(pwd)",
      "Bash(touch:*)",
      "Bash(uv:*)",
      "Read(**)",
      "WebFetch(domain:*)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Bash(pip:*)"
    ]
  },
  "env": {
    "MAX_THINKING_TOKENS": "31999"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/enforce-uv.sh"
          }
        ]
      }
    ]
  }
}
