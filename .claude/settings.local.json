{
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(cp:*)",
      "Bash(diff:*)",
      "Bash(docker compose:*)",
      "Bash(docker compose exec:*)",
      "Bash(docker compose logs:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr view:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(open:*)",
      "Bash(pnpm:*)",
      "Bash(pwd)",
      "Bash(rg:*)",
      "Bash(touch:*)",
      "Bash(uv:*)",
      "Bash(xargs:*)",
      "WebFetch(domain:*)"
    ],
    "deny": [
      "Bash(pip:*)",
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Read(.env.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Write(.env*)",
      "Write(**/secrets/**)",
      "Bash(npm uninstall:*)",
      "Bash(npm remove:*)"
    ]
  },
  "cleanupPeriodDays": 60,
  "env": {
    "MAX_THINKING_TOKENS": "31999"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/bocchi-the-map/.claude/hooks/enforce-uv.sh"
          }
        ]
      }
    ]
  }
}
