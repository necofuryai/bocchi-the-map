#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run commitlint first
npx --no-install commitlint --edit "$1"

# Get the commit message
COMMIT_MSG=$(cat "$1")

# Check if this is a feature/improve commit and provide documentation reminders
if echo "$COMMIT_MSG" | grep -E "^(feat|fix|build|ci|docs|style|refactor|perf|test|improve)(\([^)]*\))?:" > /dev/null; then
  echo ""
  echo "ğŸ“‹ Feature/improvement detected! Please consider updating documentation:"
  echo ""
  echo "   ğŸ“ Update README.md if setup instructions changed"
  echo "   ğŸ“š Update docs/IMPLEMENTATION_LOG.md for significant changes"
  echo "   ğŸ¤– Update CLAUDE.md if AI development guidance changed"
  echo "   ğŸ“Š Add milestone to implementation log for major features"
  echo ""
  echo "   ğŸ’¡ Use 'docs: update documentation for [feature]' for doc updates"
  echo ""
fi