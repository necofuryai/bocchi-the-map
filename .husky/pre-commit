#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Documentation sync reminder based on staged file changes
echo "ðŸ” Checking for documentation sync requirements..."


# Check for changes in critical files that might need documentation updates
CHANGED_FILES="$(git diff --cached --name-only)"

# API changes
if echo "$CHANGED_FILES" | grep -E "^api/(.*\.(go|sql)|migrations/.*\.up\.sql)" > /dev/null; then
  echo "ðŸ”§ API changes detected - consider updating:"
  echo "   â€¢ api/README.md for new endpoints or significant changes"
  echo "   â€¢ Database schema documentation if migrations were added"
fi

# Frontend changes
if echo "$CHANGED_FILES" | grep -E "^web/(.*\.(ts|tsx|js|jsx)|package\.json)" > /dev/null; then
  echo "ðŸŽ¨ Frontend changes detected - consider updating:"
  echo "   â€¢ web/README.md for new components or setup changes"
  echo "   â€¢ Performance documentation if optimizations were made"
fi

# Infrastructure changes
if echo "$CHANGED_FILES" | grep -E "^(infra/.*\.tf|\.github/(workflows/.*\.(yml|yaml)|actions/.*\.(yml|yaml)|.*\.json)|Dockerfile)" > /dev/null; then
  echo "ðŸš€ Infrastructure changes detected - consider updating:"
  echo "   â€¢ infra/README.md for new deployment procedures"
  echo "   â€¢ Main README.md for setup requirement changes"
fi

echo "âœ… Documentation check complete. Proceeding with commit..."
echo ""